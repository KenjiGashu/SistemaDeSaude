<!DOCTYPE html>
<html>
	<head>
  	<title>
  		Gerenciador de Clínica
  	</title>
  	<%= stylesheet_link_tag('application', :media => 'all') %>

	</head>
	<body>
		<div id="header">
			<h1>Gerenciador de Clínica</h1>
		</div>
		<% if !flash[:notice].blank? %>
			<div class="notice">
				<%= flash[:notice] %>
			</div>
		<% end %>
		<div id="main">
			<div id="content">
				<!-- conteudo das views -->
				<%= yield %>
			</div>
		</div>
		<div id="footer">
			<p id="footer-content">Clínica</p>
		</div>
	</body>
</html>
